{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "compile",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": "$tsc",
			"label": "Compile TypeScript to JavaScript",
			"detail": "tsc -p ./"
		},
		{
			"type": "shell",
			"command": "${workspaceFolder}/.vscode/bin/yaml2json.fish",
			"group": "build",
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"problemMatcher": [],
			"label": "Compile YAML to JSON",
			"detail": "Update .tmLanguage.json files",
			"options": {
				"env": {
					"PATH": "${env:PATH}"
				}
			}
		}
	]
}
