{
    "name": "vscode-fish",
    "displayName": "fish",
    "description": "Syntax highlighting and snippets for the friendly interactive shell",
    "version": "0.5.0-alpha",
    "author": "Z. Grace Moreau",
    "publisher": "zgm",
    "repository": {
        "type": "git",
        "url": "https://github.com/zgracem/vscode-fish"
    },
    "icon": "images/fish.png",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Linters"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:fish"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fish",
                "aliases": [
                    "friendly interactive shell (fish)",
                    "fish"
                ],
                "extensions": [
                    ".fish"
                ],
                "firstLine": "^#!.*\\b(fish)\\b",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fish",
                "scopeName": "source.shell.fish",
                "path": "./syntaxes/fish.tmLanguage.json"
            },
            {
              "scopeName": "markdown.fish.codeblock",
              "path": "./syntaxes/markdown-codeblock.json",
              "injectTo": [
                "text.html.markdown"
              ],
              "embeddedLanguages": {
                "meta.embedded.block.fish": "fish"
              }
            }
        ],
        "snippets": [
            {
                "language": "fish",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.19.11",
        "@types/vscode": "^1.52.0",
        "typescript": "^4.1.3",
        "vscode-test": "^1.4.1"
    },
    "__metadata": {
        "id": "599092D6-C07D-4691-B7D7-19DAF4F3E942",
        "publisherId": "C0F17A57-509D-428E-95A8-AE189E8EA8E6",
        "publisherDisplayName": "Z. Grace Moreau"
    }
}
