{
    "name": "vscode-fish",
    "displayName": "fish",
    "description": "Syntax highlighting and snippets for the friendly interactive shell",
    "version": "0.7.0",
    "author": "Z. Grace Moreau",
    "publisher": "zgm",
    "homepage": "https://github.com/zgracem/vscode-fish#readme",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/zgracem/vscode-fish"
    },
    "bugs": {
        "url": "https://github.com/zgracem/vscode-fish/issues"
    },
    "galleryBanner": {
        "color": "#4d0099",
        "theme": "light"
    },
    "icon": "images/fish.png",
    "capabilities": {
        "untrustedWorkspaces": {
            "supported": "limited",
            "description": "Syntax highlighting supported"
        }
    },
    "engines": {
        "vscode": "^1.65.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Formatters",
        "Linters"
    ],
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:fish"
    ],
    "contributes": {
        "languages": [
            {
                "id": "fish",
                "aliases": [
                    "friendly interactive shell (fish)",
                    "fish"
                ],
                "extensions": [
                    ".fish"
                ],
                "firstLine": "^#!.*\\b(fish)\\b",
                "configuration": "./fish-language-configuration.json"
            },
            {
                "id": "fish_variables",
                "aliases": [
                    "Universal fish variables"
                ],
                "filenames": [
                    "fish_variables"
                ],
                "filenamePatterns": [
                    "fishd.*",
                    "fish_variables.*"
                ],
                "firstLine": "^# This file (contains fish universal variable definitions|is automatically generated by the fishd?.*)\\.$",
                "configuration": "./fish_variables-language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "fish",
                "scopeName": "source.shell.fish",
                "path": "./syntaxes/fish.tmLanguage.json"
            },
            {
                "language": "fish_variables",
                "scopeName": "source.fish.variables",
                "path": "./syntaxes/fish_variables.tmLanguage.json"
            },
            {
                "scopeName": "source.shell.fish.fenced_code_block",
                "path": "./syntaxes/fish-markdown-codeblock.tmLanguage.json",
                "injectTo": [
                    "text.html.markdown"
                ],
                "embeddedLanguages": {
                    "meta.embedded.block.fish": "fish"
                }
            }
        ],
        "snippets": [
            {
                "language": "fish",
                "path": "./snippets/fish.code-snippets"
            }
        ],
        "configurationDefaults": {
            "[fish]": {
                "editor.insertSpaces": true,
                "editor.tabSize": 4
            }
        },
        "configuration": {
            "title": "fish",
            "properties": {
                "fish.path.fish": {
                    "type": "string",
                    "default": "fish",
                    "scope": "machine-overridable",
                    "description": "Path to the `fish` binary."
                },
                "fish.path.fish_indent": {
                    "type": "string",
                    "default": "fish_indent",
                    "scope": "machine-overridable",
                    "description": "Path to the `fish_indent` binary."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": ".vscode/bin/prepublish.fish",
        "compile": "tsc -p ./",
        "package": ".vscode/bin/package.fish"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/vscode": "^1.65.0",
        "typescript": "^4.6.2"
    },
    "__metadata": {
        "id": "599092D6-C07D-4691-B7D7-19DAF4F3E942",
        "publisherId": "C0F17A57-509D-428E-95A8-AE189E8EA8E6",
        "publisherDisplayName": "Z. Grace Moreau"
    }
}
