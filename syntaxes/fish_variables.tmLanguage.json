{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "fish universal variables",
  "scopeName": "source.fish.variables",
  "fileTypes": [
    "fish_variables"
  ],
  "uuid": "17b8b90c-c78a-43f8-9ebe-1dd09f942a0b",
  "firstLineMatch": "^# This file (contains fish universal variable definitions|is automatically generated by the fishd?.*)\\.$",
  "patterns": [
    {
      "include": "source.shell.fish#comment"
    },
    {
      "include": "#variable-assignment"
    }
  ],
  "repository": {
    "variable-assignment": {
      "patterns": [
        {
          "name": "meta.scope.variable.assignment",
          "begin": "^(SET(?:UVAR)?)\\s(?:(--)(export)\\s)?",
          "beginCaptures": {
            "1": {
              "name": "keyword.other"
            },
            "2": {
              "name": "punctuation.definition.option.fish"
            },
            "3": {
              "name": "variable.parameter.fish"
            }
          },
          "end": "($|\\n)",
          "patterns": [
            {
              "name": "meta.scope.variable.assignment.name",
              "begin": "([a-zA-Z0-9_]+)(?=:)",
              "beginCaptures": {
                "1": {
                  "name": "variable.other.fish"
                }
              },
              "end": ":",
              "endCaptures": {
                "0": {
                  "name": "punctuation.definition.variable.fish"
                }
              }
            },
            {
              "name": "string.unquoted.fish",
              "begin": "(?<=:)",
              "end": "($|\\n)",
              "patterns": [
                {
                  "include": "source.shell.fish#string-unquoted-patterns-escapes"
                }
              ]
            }
          ]
        }
      ]
    }
  }
}
